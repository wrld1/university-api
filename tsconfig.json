{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2015",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"]
    }
  },
  "include": ["src/database/migrations/*", "src/**/*"],
  "exclude": ["node_modules"]
}
